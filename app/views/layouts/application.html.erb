<!DOCTYPE html>
<html>
  <head>
    <title>CatAPIClient</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav">
      <%= link_to "Home", root_path, class: "home" %>
      <%= flash[:notice] %>
      <%= current_user.email if current_user %>
      <%= link_to "All Breeds", breeds_path, class: "nav-item" if current_user %>
      <%= link_to "Sign Up", new_user_registration_path, class: "nav-item" if !current_user %>
      <%= link_to "Sign In", new_user_session_path, class: "nav-item" if !current_user %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-item" if current_user %>
    </div>
    <%= yield %>
  </body>
</html>
